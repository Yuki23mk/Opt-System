@tailwind base;
@tailwind components;
@tailwind utilities;

/* 🎯 日本語最適化フォントスタック */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

/* ============================= */
/* 🎯 レスポンシブ設計 変数定義 */
/* ============================= */
:root {
  /* === 横幅統一管理 === */
  --page-max-width: 80rem;          /* max-w-5xl (1280px) 以前は max-w-7xl */
  --page-container-padding: 1rem;    /* px-4 */
  --page-content-padding-top: 5rem; /* pt-20 */
  --page-content-padding-bottom: 1.5rem; /* pb-6 */
  
  /* === フォントサイズ統一管理 === */
  --font-base: 0.75rem;             /* 12px（以前の設定を維持） */
  --font-xs: 0.6875rem;             /* 11px */
  --font-sm: 0.6875rem;             /* 11px */
  --font-md: 0.75rem;               /* 12px */
  --font-lg: 0.875rem;              /* 14px */
  --font-xl: 1rem;                  /* 16px */
  --font-2xl: 1.125rem;             /* 18px */
  
  /* === コンポーネント別サイズ === */
  --header-height: 2.5rem;          /* h-10 */
  --header-font-size: var(--font-lg); /* 14px */
  --table-cell-padding-x: 0.75rem;  /* px-3 */
  --table-cell-padding-y: 0.5rem;   /* py-2 */
  --table-font-size: var(--font-xs); /* 11px */
  --button-height: 1.75rem;         /* h-7 */
  --button-font-size: var(--font-xs); /* 11px */
  --button-padding-x: 0.5rem;       /* px-2 */
  --button-padding-y: 0.25rem;      /* py-1 */
  --card-padding: 1rem;             /* p-4 */
  --card-spacing: 0.75rem;          /* space-y-3 */
  
  /* === OptiOil カラーパレット === */
  --color-teal-main: #115e59;       /* bg-[#115e59] */
  --color-teal-hover: #0f766e;      /* hover:bg-[#0f766e] */
  --color-teal-light: #14b8a6;      /* teal-500 */
  --color-red-main: #ef4444;        /* red-500 */
  --color-red-hover: #dc2626;       /* red-600 */
  --color-amber-main: #f59e0b;      /* amber-500 */
  --color-amber-hover: #d97706;     /* amber-600 */
  --color-white: #ffffff;
  --color-slate-50: #f8fafc;
  --color-slate-100: #f1f5f9;
  --color-slate-200: #e2e8f0;
  --color-slate-600: #475569;
  --color-slate-700: #334155;
  --color-slate-900: #0f172a;
  
  /* === shadcn/ui カラー変数（既存） === */
  --background: 0 0% 100%;
  --foreground: 215 25% 27%;
  --card: 0 0% 100%;
  --card-foreground: 215 25% 27%;
  --popover: 0 0% 100%;
  --popover-foreground: 215 25% 27%;
  --primary: 178 77% 32%;
  --primary-foreground: 0 0% 100%;
  --secondary: 210 40% 96%;
  --secondary-foreground: 215 25% 27%;
  --muted: 210 40% 96%;
  --muted-foreground: 215 16% 47%;
  --accent: 178 84% 32%;
  --accent-foreground: 0 0% 100%;
  --destructive: 0 84% 60%;
  --destructive-foreground: 0 0% 100%;
  --warning: 38 92% 50%;
  --warning-foreground: 0 0% 100%;
  --border: 215 20% 91%;
  --input: 215 20% 91%;
  --ring: 178 77% 32%;
  --chart-1: 178 77% 32%;
  --chart-2: 0 84% 60%;
  --chart-3: 38 92% 50%;
  --chart-4: 217 91% 60%;
  --chart-5: 142 76% 36%;
  --radius: 0.5rem;
}

/* ============================= */
/* 🎯 基本スタイル */
/* ============================= */
@layer base {
  * {
    @apply border-border;
    font-family: 
      'Inter', 
      'Hiragino Kaku Gothic ProN', 
      'Hiragino Sans', 
      'BIZ UDPGothic', 
      'Meiryo', 
      'MS Gothic', 
      sans-serif;
  }
  
  body {
    @apply bg-background text-foreground;
    line-height: 1.65;
    letter-spacing: 0.025em;
    font-feature-settings: "kern", "liga", "clig", "calt";
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background-color: var(--color-slate-50);
    font-size: var(--font-base); /* 12px */
  }
  
  h1, h2, h3, h4, h5, h6 {
    letter-spacing: 0.015em;
    line-height: 1.4;
    font-weight: 600;
  }
  
  table {
    font-feature-settings: "tnum";
  }
  
  .font-normal { font-weight: 450; }
  .font-medium { font-weight: 550; }
  .font-semibold { font-weight: 650; }
  .font-bold { font-weight: 750; }
}

/* ============================= */
/* 🎯 統一レイアウトクラス */
/* ============================= */
@layer components {
  /* === ページレイアウト統一 === */
  .page-container {
    width: 100%;
    max-width: var(--page-max-width);
    margin: 0 auto;
    padding-left: var(--page-container-padding);
    padding-right: var(--page-container-padding);
  }
  
  .page-content {
    padding-top: var(--page-content-padding-top);
    padding-bottom: var(--page-content-padding-bottom);
  }
  
  .page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem; /* mb-6 */
    height: var(--header-height);
  }
  
  .page-title {
    display: flex;
    align-items: center;
    gap: 0.5rem; /* space-x-2 */
    font-size: var(--header-font-size);
    font-weight: 600;
    color: var(--color-slate-700);
  }
  
  .page-title-icon {
    width: 1.25rem; /* w-5 */
    height: 1.25rem; /* h-5 */
    color: var(--color-teal-main);
  }
  
  .page-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem; /* space-x-2 */
  }
  
  /* === カード統一 === */
  .card-container {
    background: var(--color-white);
    border: 1px solid var(--color-slate-200);
    border-radius: 0.5rem; /* rounded-lg */
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    padding: var(--card-padding);
  }
  
  .card-grid {
    display: grid;
    gap: var(--card-spacing);
  }
  
  /* === テーブル統一 === */
  .table-container {
    @apply card-container;
    padding: 0;
    overflow: hidden;
  }
  
  .table-header {
    background: var(--color-teal-main);
    color: var(--color-white);
    font-size: var(--table-font-size);
    font-weight: 600;
  }
  
  .table-header-cell {
    padding: var(--table-cell-padding-y) var(--table-cell-padding-x);
    text-align: left;
  }
  
  .table-body-cell {
    padding: var(--table-cell-padding-y) var(--table-cell-padding-x);
    font-size: var(--table-font-size);
    border-bottom: 1px solid var(--color-slate-100);
  }
  
  .table-row:last-child .table-body-cell {
    border-bottom: none;
  }
  
  .table-row:hover {
    background: var(--color-slate-50);
  }
  
  /* === ボタン統一 === */
  .btn-base {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem; /* space-x-1 */
    height: var(--button-height);
    padding: var(--button-padding-y) var(--button-padding-x);
    font-size: var(--button-font-size);
    font-weight: 500;
    border-radius: 0.375rem; /* rounded-md */
    transition: all 0.2s;
    cursor: pointer;
    border: none;
    outline: none;
  }
  
  .btn-primary {
    @apply btn-base;
    background: var(--color-teal-main);
    color: var(--color-white);
  }
  
  .btn-primary:hover {
    background: var(--color-teal-hover);
  }
  
  .btn-danger {
    @apply btn-base;
    background: var(--color-red-main);
    color: var(--color-white);
  }
  
  .btn-danger:hover {
    background: var(--color-red-hover);
  }
  
  .btn-secondary {
    @apply btn-base;
    background: var(--color-white);
    color: var(--color-slate-700);
    border: 1px solid var(--color-slate-200);
  }
  
  .btn-secondary:hover {
    background: var(--color-slate-50);
    border-color: var(--color-slate-300);
  }
  
  .btn-icon {
    width: 1rem; /* w-4 */
    height: 1rem; /* h-4 */
  }
  
  /* === ステータスバッジ統一 === */
  .badge-base {
    display: inline-flex;
    align-items: center;
    padding: 0.125rem 0.375rem; /* px-1.5 py-0.5 */
    font-size: var(--font-xs);
    font-weight: 500;
    border-radius: 0.25rem; /* rounded */
  }
  
  .badge-success {
    @apply badge-base;
    background: var(--color-teal-main);
    color: var(--color-white);
  }
  
  .badge-warning {
    @apply badge-base;
    background: var(--color-amber-main);
    color: var(--color-white);
  }
  
  .badge-danger {
    @apply badge-base;
    background: var(--color-red-main);
    color: var(--color-white);
  }
  
  .badge-secondary {
    @apply badge-base;
    background: var(--color-slate-100);
    color: var(--color-slate-700);
  }
  
  /* === フォーム統一 === */
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem; /* space-y-1 */
  }
  
  .form-label {
    font-size: var(--font-sm);
    font-weight: 500;
    color: var(--color-slate-700);
  }
  
  .form-input {
    padding: 0.5rem 0.75rem; /* px-3 py-2 */
    font-size: var(--font-sm);
    border: 1px solid var(--color-slate-200);
    border-radius: 0.375rem; /* rounded-md */
    background: var(--color-white);
    transition: border-color 0.2s;
  }
  
  .form-input:focus {
    outline: none;
    border-color: var(--color-teal-main);
    box-shadow: 0 0 0 1px var(--color-teal-main);
  }
  
  .form-select {
    @apply form-input;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 0.5rem center;
    background-repeat: no-repeat;
    background-size: 1.5em 1.5em;
    padding-right: 2.5rem;
    appearance: none;
  }
  
  /* === 検索・フィルター統一 === */
  .search-container {
    display: flex;
    align-items: center;
    gap: 0.5rem; /* space-x-2 */
    margin-bottom: 1rem; /* mb-4 */
  }
  
  .search-input {
    @apply form-input;
    flex: 1;
    min-width: 200px;
  }
  
  /* === ローディング統一 === */
  .loading-spinner {
    width: 1rem; /* w-4 */
    height: 1rem; /* h-4 */
    border: 2px solid var(--color-slate-200);
    border-top: 2px solid var(--color-teal-main);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  
  /* === モーダル統一 === */
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 50;
  }
  
  .modal-content {
    background: var(--color-white);
    border-radius: 0.5rem; /* rounded-lg */
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    padding: 1.5rem; /* p-6 */
    max-width: 90vw;
    max-height: 90vh;
    overflow-y: auto;
  }
  
  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem; /* mb-4 */
    padding-bottom: 0.5rem; /* pb-2 */
    border-bottom: 1px solid var(--color-slate-200);
  }
  
  .modal-title {
    font-size: var(--font-lg);
    font-weight: 600;
    color: var(--color-slate-700);
  }
  
  .modal-close {
    @apply btn-base;
    background: none;
    color: var(--color-slate-400);
    padding: 0.25rem;
    width: auto;
    height: auto;
  }
  
  .modal-close:hover {
    color: var(--color-slate-600);
  }
  
  .modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 0.5rem; /* space-x-2 */
    margin-top: 1rem; /* mt-4 */
    padding-top: 0.5rem; /* pt-2 */
    border-top: 1px solid var(--color-slate-200);
  }
}

/* ============================= */
/* 🎯 レスポンシブ調整 */
/* ============================= */
@layer utilities {
  /* モバイル対応 */
  @media (max-width: 640px) {
    :root {
      --page-container-padding: 0.75rem; /* px-3 */
      --page-content-padding-top: 4rem; /* pt-16 */
      --card-padding: 0.75rem; /* p-3 */
      --font-base: 14px;
    }
    
    .page-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
      height: auto;
    }
    
    .page-actions {
      width: 100%;
      justify-content: flex-start;
    }
    
    .search-container {
      flex-direction: column;
      align-items: stretch;
    }
    
    .search-input {
      min-width: auto;
    }
  }
  
  /* タブレット対応 */
  @media (min-width: 641px) and (max-width: 1024px) {
    :root {
      --page-max-width: 70rem; /* max-w-4xl */
    }
  }
}

/* ============================= */
/* 🎯 アニメーション・その他 */
/* ============================= */
@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}

/* プリント対応 */
@media print {
  .no-print { display: none !important; }
  * {
    background: transparent !important;
    color: black !important;
    box-shadow: none !important;
  }
}

/* アクセシビリティ */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* 🎯 ログインフォーム共通サイズ管理 */
:root {
  /* 既存の変数に追加 */
  --login-container-width: 22rem; /* max-w-sm */
  --login-container-padding: 1.5rem; /* px-6 */
  --login-form-padding: 1.25rem; /* p-6 */
  --login-form-radius: 1rem; /* rounded-2xl */
  --login-logo-width: 160px;
  --login-logo-height: 72px;
  --login-logo-margin: 2.5rem; /* mb-10 */
  --login-form-spacing: 1rem; /* space-y-4 */
  --login-input-padding-y: 0.625rem; /* py-2.5 */
  --login-input-padding-x: 0.875rem; /* px-3 */
  --login-button-padding-y: 0.625rem; /* py-2.5 */
  --login-label-size: 0.75rem; /* text-sm */
  --login-input-size: 0.75rem; /* text-sm */
  --login-footer-margin: 1.5rem; /* mt-6 */
}

/* ログインフォーム共通スタイル */
@layer components {
  .login-container {
    width: 100%;
    max-width: var(--login-container-width);
    margin: 0 auto;
    padding-left: var(--login-container-padding);
    padding-right: var(--login-container-padding);
  }

  .login-logo {
    display: flex;
    justify-content: center;
    margin-bottom: var(--login-logo-margin);
  }

  .login-form-card {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(24px);
    border-radius: var(--login-form-radius);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: var(--login-form-padding);
    position: relative;
    overflow: hidden;
  }

  .login-form-decoration-1 {
    position: absolute;
    top: 0;
    right: 0;
    width: 5rem;
    height: 5rem;
    background: linear-gradient(to bottom right, rgba(20, 184, 166, 0.2), transparent);
    border-radius: 50%;
    filter: blur(24px);
  }

  .login-form-decoration-2 {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 4rem;
    height: 4rem;
    background: linear-gradient(to top right, rgba(100, 116, 139, 0.1), transparent);
    border-radius: 50%;
    filter: blur(16px);
  }

  .login-form-content {
    position: relative;
    z-index: 10;
  }

  .login-form-space {
    display: flex;
    flex-direction: column;
    gap: var(--login-form-spacing);
  }

  .login-input-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .login-label {
    display: block;
    font-size: var(--login-label-size);
    font-weight: 500;
    color: rgb(51, 65, 85);
  }

  .login-input {
    width: 100%;
    padding: var(--login-input-padding-y) var(--login-input-padding-x);
    font-size: var(--login-input-size);
    border-radius: 0.5rem;
    border: 2px solid rgb(226, 232, 240);
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(4px);
    transition: all 0.2s;
    outline: none;
  }

  .login-input:focus {
    border-color: rgb(20, 184, 166);
    ring: 1px rgb(204, 251, 241);
  }

  .login-input:hover {
    border-color: rgb(203, 213, 225);
  }

  .login-button {
    width: 100%;
    background: linear-gradient(to right, rgb(13, 148, 136), rgb(15, 118, 110));
    color: white;
    font-weight: 500;
    padding: var(--login-button-padding-y) 0;
    font-size: var(--login-input-size);
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transition: all 0.2s;
    border: none;
    cursor: pointer;
  }

  .login-button:hover {
    background: linear-gradient(to right, rgb(15, 118, 110), rgb(17, 94, 89));
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .login-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .login-button-secondary {
    width: 100%;
    border: 2px solid rgb(226, 232, 240);
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(4px);
    color: rgb(51, 65, 85);
    font-weight: 500;
    padding: var(--login-button-padding-y) 0;
    font-size: var(--login-input-size);
    border-radius: 0.5rem;
    transition: all 0.2s;
    cursor: pointer;
  }

  .login-button-secondary:hover {
    border-color: rgb(153, 246, 228);
    background: rgb(240, 253, 250);
    color: rgb(15, 118, 110);
  }

  .login-footer {
    text-align: center;
    font-size: 0.75rem;
    color: rgb(100, 116, 139);
    margin-top: var(--login-footer-margin);
  }

  .login-error {
    background: linear-gradient(to right, rgb(254, 242, 242), rgb(252, 231, 243));
    border: 1px solid rgba(239, 68, 68, 0.6);
    border-radius: 0.5rem;
    padding: 0.5rem;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }

  .login-error-text {
    color: rgb(185, 28, 28);
    font-size: 0.75rem;
  }
}
/* ログインページ専用の小さいフォント */
.login-page-small {
  font-size: 12px !important;
}

.login-page-small h1,
.login-page-small h2,
.login-page-small h3 {
  font-size: 12px !important;
}

.login-page-small .text-lg {
  font-size: 12px !important;
}

.login-page-small .text-sm {
  font-size: 11px !important;
}

.login-page-small .text-xs {
  font-size: 10px !important;
}
